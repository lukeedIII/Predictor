{
  "name": "nexus-shadow-quant",
  "productName": "Nexus Shadow-Quant",
  "version": "6.0.1",
  "description": "Institutional Crypto Intelligence Platform",
  "main": "electron/main.js",
  "private": true,
  "scripts": {
    "dev": "concurrently -n VITE,ELECTRON \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "tsc -b && vite build",
    "dist": "npm run build && electron-builder",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.nexus.shadow-quant",
    "productName": "Nexus Shadow-Quant",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "python_embedded",
        "to": "python_embedded"
      },
      {
        "from": "python_backend",
        "to": "python_backend"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "license": "public/DISCLAIMER.txt"
    }
  },
  "dependencies": {
    "lightweight-charts": "^5.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.13.0",
    "recharts": "^3.7.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "electron": "^40.3.0",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "wait-on": "^9.0.3"
  }
}